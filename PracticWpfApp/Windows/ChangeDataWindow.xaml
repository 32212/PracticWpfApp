<Window x:Class="PracticWpfApp.Windows.ChangeDataWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PracticWpfApp.Windows"
        mc:Ignorable="d"
        Title="Изменение даты заказа" Height="450" Width="800" FontFamily="Comic Sans MS">
   
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35*"/>
            <RowDefinition Height="200*"/>
            <RowDefinition Height="75*"/>
        </Grid.RowDefinitions>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <TextBlock  Margin="10" HorizontalAlignment="Center">Дата заказа</TextBlock>
            <DatePicker Name="dpDate" Grid.Row="1" MinWidth="200"/>
        </StackPanel>
        
        <StackPanel Grid.Row="2" HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Name="btnChange" Width="60" HorizontalAlignment="Left" Click="btnChange_Click">Изменить</Button>
            <Button Name="btnBack" Margin="90,0,0,0" Width="60" HorizontalAlignment="Left" Click="btnBack_Click">Назад</Button>
        </StackPanel>
        
    </Grid>
    
</Window>
