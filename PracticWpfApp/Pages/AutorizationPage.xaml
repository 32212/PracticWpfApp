<Page x:Class="PracticWpfApp.Pages.AutorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PracticWpfApp.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800" FontFamily="Comic Sans MS"
      Title="Авторизация">

    <Grid>
        <StackPanel Orientation="Vertical" Width="255" Height="220" >
        <TextBox Name="tbLogin" Width="255" Height="25" ></TextBox>
        <TextBox Name="tbPassword" Width="255" Height="25"  Margin="0,5,0,10"></TextBox>

        <StackPanel Name="spTm" Orientation="Horizontal" Visibility="Hidden">
            <TextBlock Name="tblMessage" Margin="0,0,15,5"> Ожидайте, осталось:</TextBlock>
            <TextBlock Name="tblSec" Margin="0,0,0,5"></TextBlock>
        </StackPanel>

        <Button Name="btnAutorization" Click="btnAutorization_Click">Авторизация</Button>
            <Button Name="btnGuest" Click="btnGuest_Click">Войти как гость</Button>
        
        </StackPanel>
    </Grid>
</Page>
